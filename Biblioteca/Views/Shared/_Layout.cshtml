<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Biblioteca | @ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/css/adminlte.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    @RenderSection("styles", required: false)
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-primary navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="https://www.instagram.com/guilherme_andrade2" target="_blank" class="nav-link text-white-50">Desenvolvido por Guilherme Andrade Lacerda</a>
                </li>
                @*<li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Contact</a>
                </li>*@
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a asp-controller="Emprestimo" asp-action="Index" class="brand-link navbar-primary">
                <i class="fa fa-book ml-4"></i>
                <span style="color:white" class="brand-text font-weight-bold">Lacerda</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" id="pagina-ativa" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview active">
                            <a asp-controller="Livro" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-book-open"></i>
                                <p>
                                    Livros
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview ">
                            <a asp-controller="Emprestimo" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-archive"></i>
                                <p>
                                    Emprestimos
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview ">
                            <a asp-controller="Relatorio" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-file-download"></i>
                                <p>
                                    Relatórios
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@ViewBag.Menu</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a asp-controller="@ViewBag.Menu" asp-action="Index">@ViewBag.Menu</a></li>
                                <li class="breadcrumb-item active">@ViewBag.Title</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div id="conteudo">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <footer class="main-footer text-center no-print">
            <strong>Copyright &copy; @DateTime.Now.Year <a href="https://www.instagram.com/guilherme_andrade2" target="_blank">Guilherme A.Lacerda</a>.</strong> All rights
            reserved.
        </footer>
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>
    <script src="~/js/demo.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive-master/src/jquery.unobtrusive-ajax.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>