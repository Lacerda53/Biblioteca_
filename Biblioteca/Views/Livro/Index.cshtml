@model IEnumerable<Biblioteca.Models.Livro>

@{
    ViewData["Title"] = "Lista de Livros";
}
<section class="content">
        <p>
            <a asp-controller="Livro" asp-action="Cadastrar" class="btn btn-warning">Cadastrar Livro</a>
        </p>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Livros</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">

            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            Imagem
                        </th>
                        <th>
                            Título
                        </th>
                        <th>
                            Autor
                        </th>
                        <th>
                            Editora
                        </th>
                        <th>
                            Unidade
                        </th>
                        <th>
                            Gênero
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img alt="Avatar" class="table-avatar" src="@item.Imagem">
                            </td>
                            <td>
                                @item.Titulo
                            </td>
                            <td>
                                @item.Autor
                            </td>
                            <td>
                                @item.Editora
                            </td>
                            <td>
                                @item.Unidade
                            </td>
                            <td>
                                @item.Genero
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="Detalhes">
                                    <i class="fas fa-folder">
                                    </i>
                                    Visualizar
                                </a>
                                <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Editar">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Editar
                                </a>
                                <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Deletar">
                                    <i class="fas fa-trash">
                                    </i>
                                    Deletar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>