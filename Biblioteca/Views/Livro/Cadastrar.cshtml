@model Biblioteca.Models.Livro

@{
    ViewData["Title"] = "Cadastrar";
    ViewBag.Menu = "Livro";
}
<link href="~/lib/dropzone/min/dropzone.min.css" rel="stylesheet" />
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-gray">
                <div class="card-header">
                    <h3 class="card-title">Cadastro</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Imagem" class="control-label"></label>
                            <form asp-controller="Livro" asp-action="Upload" class="dropzone" id="dropzone-form">
                                <div id="div-upload">
                                    <div id="div-photoup" class="fallback">

                                        <input type="file" name="file" asp-for="Imagem" />
                                    </div>
                                </div>
                            </form>
                            <form asp-controller="Livro" asp-action="Cadastrar">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Nome" class="control-label"></label>
                                    <input asp-for="Nome" autocomplete="off" placeholder="Digite o nome do livro" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Autor" class="control-label"></label>
                                    <input asp-for="Autor" autocomplete="off" placeholder="Digite o nome do autor" class="form-control" />
                                    <span asp-validation-for="Autor" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Edicao" class="control-label"></label>
                                    <input asp-for="Edicao" placeholder="Digite a edição do livro" type="number" min="1" value="1" class="form-control" />
                                    <span asp-validation-for="Edicao" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Quantidade" class="control-label"></label>
                                    <input asp-for="Quantidade" placeholder="Digite a quantidade desse mesmo livro" type="number" min="1" value="1" class="form-control" />
                                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Categoria" class="control-label"></label>
                                    <input asp-for="Categoria" autocomplete="off" placeholder="Digite a categoria do livro" class="form-control" />
                                    <span asp-validation-for="Categoria" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Cadastrar" class="btn btn-success" />
                                    <a asp-action="Index" class="btn btn-default">Voltar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/lib/dropzone/min/dropzone.min.js"></script>
<script>
    var myDropzone = new Dropzone(".dropzone", {
        paramName: "file",
        maxFiles: 1,
        addRemoveLinks: true,
        acceptedFiles: ".jpeg,.jpg,.png",
        dictMaxFilesExceeded: "Não é permitido mais de uma imagem.",
        dictDefaultMessage: "Clique ou solte uma imagem aqui.",

    });
</script>